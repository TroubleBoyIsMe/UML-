<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personal_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linearlayout_bg">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="三分剑气"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/icon_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="383219366@qq.com"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/icon_img"
        app:layout_constraintTop_toBottomOf="@id/tv_id"
        tools:ignore="MissingConstraints" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon_img"
        android:background="@drawable/linearlayout_bg"
        android:layout_marginTop="50dp"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/line_list"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:src="@mipmap/list"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="通讯录"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@mipmap/to"
                android:layout_marginLeft="30dp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#eee"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/line_inbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_bg"
            android:layout_marginTop="5dp"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:src="@mipmap/inbox_icon"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="收件箱"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@mipmap/to"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#eee"
        tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/line_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/linearlayout_bg"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:src="@mipmap/send_icon"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="写邮件"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@mipmap/to"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#eee"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/line_sended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/linearlayout_bg"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:src="@mipmap/sended"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="已发送"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@mipmap/to"
                android:layout_marginLeft="30dp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#eee"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/line_draft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/linearlayout_bg"
            tools:ignore="MissingConstraints"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:src="@mipmap/draft"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="草稿箱"
                android:layout_marginStart="20dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:src="@mipmap/to"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#eee"
            tools:ignore="MissingConstraints" />

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>